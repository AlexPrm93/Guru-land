.exchange {
  background:#fff url(../img/exchange_section/last.png) bottom no-repeat;
  width: 100%;
  position: relative;
  padding-top: 6.1%;
  padding-bottom: 10%;
  .subtitle-feature {
    margin-top: pixelToOtherUnit(4, rem);
    margin-left: pixelToOtherUnit(33, rem);
  }
  .main-subtitle {
    margin-left: pixelToOtherUnit(18, rem);
    &:after{
      background: #eef4fa;
    }
    span {
      font-weight: 1000;
      margin-right: pixelToOtherUnit(33, rem);
      color: #76d2a2;
    }
  }
  .exchange-info {
    font-size: pixelToOtherUnit(54, rem);
    font-weight: 200;
    text-align: center;
    font-family:'Montserrat';
    margin-left: pixelToOtherUnit(15, rem);
    padding-top: pixelToOtherUnit(91, rem);
    line-height: pixelToOtherUnit(78, rem);
  }
  .img-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 79%;
    margin-left: auto;
    margin-right: auto;
    margin-top: 4.5%;
    figure{
      width: 13%;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: transparent;
      overflow:hidden;
      border-radius: 26px;
      margin: 0;
      padding: 0;
      &.item_0{
        width: 5.2%;
      }
      &.item_1{
        width: 7.8%;
      }
      &.item_2{
        width: 10%;
      }
      &.item_3{
        border-radius: 43px;
      }
      img{
        width 100%
      }
    }
  }
  .btn{
    padding-left: 3.895833rem;
    padding-right: 3.895833rem;
    margin: 0 auto;
    margin-top: 4.4%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
}
